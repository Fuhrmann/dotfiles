#!/usr/bin/env bash

FILES=0

trash_empty() {
    trash-empty
    paplay /usr/share/sounds/freedesktop/stereo/trash-empty.oga
		kill -USR1 "$(pgrep --oldest --parent "$1")"
}

trash_list() {
    FILES=$(trash-list | wc -l)
}

trap "trash_list" USR1

if [[ $1 = "--empty" ]] || [[ $1 = "-e" ]]; then
    # $2 is the pid polybar sends
    trash_empty "$2"
    exit 0
elif [[ $1 = "--check" ]] || [[ $1 = "-c" ]]; then
    trash_list
    echo " $FILES"
    exit 0
fi
